FROM ghcr.io/astral-sh/uv:bookworm AS builder

ENV UV_COMPILE_BYTECODE=1 UV_LINK_MODE=copy
ENV UV_PYTHON_INSTALL_DIR=/python
ENV UV_PYTHON_PREFERENCE=only-managed

RUN uv python install 3.12

WORKDIR /app

# Install ALL dependencies from bindu ecosystem
COPY pyproject.toml uv.lock ./
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project --no-dev

FROM node:22-bookworm-slim AS node-base

FROM debian:bookworm-slim

# Install minimal runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy Python from builder
COPY --from=builder /python /python

# Copy Node.js from node-base
COPY --from=node-base /usr/local/bin/node /usr/local/bin/
COPY --from=node-base /usr/local/lib/node_modules /usr/local/lib/node_modules
RUN ln -s /usr/local/lib/node_modules/npm/bin/npm-cli.js /usr/local/bin/npm && \
    ln -s /usr/local/lib/node_modules/npm/bin/npx-cli.js /usr/local/bin/npx

# Copy ALL dependencies (this is the heavy part, shared across agents)
COPY --from=builder /app/.venv /app/.venv

# Add to PATH
ENV PATH="/python/bin:/app/.venv/bin:$PATH"

# OCI labels for base
LABEL org.opencontainers.image.title="bindu-base"
LABEL org.opencontainers.image.description="Base runtime for Bindu agents with Python 3.12, Node.js 22, and all dependencies"
LABEL org.opencontainers.image.authors="raahul dutta <raahul@getbindu.com>"
LABEL org.opencontainers.image.version="1.0.0"

WORKDIR /app
